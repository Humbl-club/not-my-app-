#!/bin/bash

# Pre-commit hook for automatic sync
echo "ðŸ”„ Running pre-commit sync checks..."

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Check if we're on main branch
BRANCH=$(git branch --show-current)
if [ "$BRANCH" = "main" ]; then
    echo -e "${YELLOW}ðŸ“¤ Preparing to sync main branch...${NC}"
    
    # Run any pre-commit checks
    echo "ðŸ§ª Running pre-commit tests..."
    
    # Check if package.json exists and run tests
    if [ -f "package.json" ]; then
        if npm list --depth=0 2>/dev/null | grep -q "jest\|vitest\|test"; then
            echo "Running frontend tests..."
            npm test --passWithNoTests 2>/dev/null || echo "No tests to run"
        fi
    fi
    
    # Check backend if it exists
    if [ -d "backend" ] && [ -f "backend/package.json" ]; then
        echo "Checking backend..."
        cd backend
        if npm list --depth=0 2>/dev/null | grep -q "jest\|vitest\|test"; then
            echo "Running backend tests..."
            npm test --passWithNoTests 2>/dev/null || echo "No backend tests to run"
        fi
        cd ..
    fi
    
    echo -e "${GREEN}âœ… Pre-commit checks completed${NC}"
fi

echo -e "${GREEN}ðŸš€ Ready to commit and sync${NC}"
