#!/bin/bash

# Post-commit hook for automatic sync
echo "üì§ Post-commit: Syncing changes..."

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

BRANCH=$(git branch --show-current)

if [ "$BRANCH" = "main" ]; then
    echo -e "${YELLOW}üîÑ Auto-syncing main branch to remote...${NC}"
    
    # Auto-push to origin
    if git push origin main 2>/dev/null; then
        echo -e "${GREEN}‚úÖ Successfully synced to GitHub${NC}"
        
        # Display commit info
        COMMIT_HASH=$(git rev-parse --short HEAD)
        COMMIT_MSG=$(git log -1 --pretty=%B)
        echo -e "${GREEN}üìù Synced commit: ${COMMIT_HASH}${NC}"
        echo -e "${GREEN}üí¨ Message: ${COMMIT_MSG}${NC}"
    else
        echo -e "${RED}‚ùå Failed to sync to GitHub${NC}"
        echo -e "${YELLOW}üí° You may need to pull first: git pull origin main${NC}"
    fi
else
    echo -e "${YELLOW}‚ÑπÔ∏è  On branch: ${BRANCH} (not auto-syncing)${NC}"
fi
