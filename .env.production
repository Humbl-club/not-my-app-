# UK ETA Gateway - Production Environment Configuration
# Copy this file and update with your production values

# Application Configuration
VITE_APP_URL=https://uketa.gov.uk
VITE_ENVIRONMENT=production

# Supabase Configuration (Production)
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key_here
SUPABASE_PROJECT_ID=your_production_project_id

# Custom Supabase Domain (Optional)
VITE_SUPABASE_API_URL=https://api.uketa.gov.uk

# Stripe Configuration (Live Keys)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Google reCAPTCHA
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Security Configuration
VITE_CSRF_SECRET=your_csrf_secret_32_characters_here
JWT_SECRET=your_jwt_secret_256_bit_here
ENCRYPTION_KEY=your_encryption_key_256_bit_here

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.uketa.gov.uk
SMTP_PORT=587
SMTP_USER=noreply@uketa.gov.uk
SMTP_PASS=your_smtp_password_here
SMTP_FROM=UK ETA Gateway <noreply@uketa.gov.uk>

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id
VITE_SENTRY_DSN=https://your-frontend-sentry-dsn@sentry.io/project-id
VITE_POSTHOG_KEY=your_posthog_key_here
VITE_ANALYTICS_ID=your_google_analytics_id

# CDN Configuration
VITE_CDN_URL=https://cdn.uketa.gov.uk
AWS_S3_BUCKET=uketa-production-documents
AWS_REGION=eu-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Rate Limiting & Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SENSITIVE_MAX=5

# Database Backup Configuration
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=uketa-production-backups

# Monitoring Endpoints
HEALTH_CHECK_TOKEN=your_health_check_token_here
UPTIME_ROBOT_KEY=your_uptime_robot_key_here

# Support Configuration
SUPPORT_EMAIL=support@uketa.gov.uk
ADMIN_EMAIL=admin@uketa.gov.uk
TECHNICAL_CONTACT=tech@uketa.gov.uk

# Compliance & Legal
PRIVACY_POLICY_URL=https://uketa.gov.uk/privacy
TERMS_OF_SERVICE_URL=https://uketa.gov.uk/terms
COOKIE_POLICY_URL=https://uketa.gov.uk/cookies

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT_SUPPORT=true
VITE_ENABLE_A_B_TESTING=false
VITE_MAINTENANCE_MODE=false

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_key
DATADOG_API_KEY=your_datadog_key
PINGDOM_CHECK_ID=your_pingdom_check_id

# Domain & SSL
PRIMARY_DOMAIN=uketa.gov.uk
WWW_DOMAIN=www.uketa.gov.uk
API_DOMAIN=api.uketa.gov.uk
CDN_DOMAIN=cdn.uketa.gov.uk
SSL_CERT_PATH=/etc/ssl/certs/uketa.gov.uk.crt
SSL_KEY_PATH=/etc/ssl/private/uketa.gov.uk.key

# Cloudflare Configuration
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_EMAIL=your_cloudflare_email

# Database Configuration
DATABASE_URL=postgresql://username:password@your-db-host:5432/uketa_production
DATABASE_POOL_SIZE=20
DATABASE_MAX_CONNECTIONS=100
DATABASE_SSL_MODE=require

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://your-redis-host:6379
REDIS_PASSWORD=your_redis_password
REDIS_MAX_CONNECTIONS=10

# Log Management
LOG_LEVEL=info
LOG_FILE=/var/log/uketa/application.log
ERROR_LOG_FILE=/var/log/uketa/error.log
ACCESS_LOG_FILE=/var/log/uketa/access.log

# Deployment Configuration
DEPLOY_ENVIRONMENT=production
DEPLOY_VERSION=1.0.0
BUILD_NUMBER=auto-generated
GIT_COMMIT_SHA=auto-generated
DEPLOY_DATE=auto-generated

# Security Headers
STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains; preload
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin